[Unit]
Description=BeoSound 5C Masterlink Sniffer
After=network.target
Wants=network.target

[Service]
Type=simple
User=kirsten
Group=kirsten
WorkingDirectory=/home/kirsten/beosound5c
ExecStart=/usr/bin/python3 /home/kirsten/beosound5c/services/masterlink
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 