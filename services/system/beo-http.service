[Unit]
Description=BeoSound5c HTTP Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=kirsten
WorkingDirectory=/home/kirsten/beosound5c/web
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python3 /home/kirsten/beosound5c/services/http_server.py 8000
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
